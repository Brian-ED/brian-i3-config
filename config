# Sound settings using wpctl to adjust volume in Pipewire.
set $refresh_i3status killall -SIGUSR1 i3status
set $speaker "$(wpctl status | egrep '\*.*Speaker'  | grep -oE '[0-9]+' | head -n 1)"
set $microphone "$(wpctl status | egrep '\*.*Microphone'  | grep -oE '[0-9]+' | head -n 1)"
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume $speaker 10%+ --limit 1
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume $speaker 10%-
bindsym Control+Shift+2 exec --no-startup-id wpctl set-volume $speaker 1%+
bindsym Control+Shift+1 exec --no-startup-id wpctl set-volume $speaker 1%-
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute $speaker toggle
bindsym XF86AudioMicMute exec --no-startup-id wpctl set-source-mute $microphone toggle

hide_edge_borders both

