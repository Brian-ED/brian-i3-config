# Middle mouse button is very useful, so enable with $mod+m
mode "middle_mouse" {

    # Move very fast via jhkl
    bindsym j exec ~/.config/i3/blender.sh up    50
    bindsym h exec ~/.config/i3/blender.sh left  50
    bindsym k exec ~/.config/i3/blender.sh down  50
    bindsym l exec ~/.config/i3/blender.sh right 50

    # Move fast with wasd
    bindsym w exec ~/.config/i3/blender.sh up    10
    bindsym a exec ~/.config/i3/blender.sh left  10
    bindsym s exec ~/.config/i3/blender.sh down  10
    bindsym d exec ~/.config/i3/blender.sh right 10

    # Move slow with shift+jhkl
    bindsym shift+j exec ~/.config/i3/blender.sh up    5
    bindsym shift+h exec ~/.config/i3/blender.sh left  5
    bindsym shift+k exec ~/.config/i3/blender.sh down  5
    bindsym shift+l exec ~/.config/i3/blender.sh right 5

    # Move very slow with shift+wasd
    bindsym shift+w exec ~/.config/i3/blender.sh up    1
    bindsym shift+a exec ~/.config/i3/blender.sh left  1
    bindsym shift+s exec ~/.config/i3/blender.sh down  1
    bindsym shift+d exec ~/.config/i3/blender.sh right 1

    # Exiting mode
    bindsym $mod+m exec xdotool mouseup 2; mode "default"
    bindsym Escape exec xdotool mouseup 2; mode "default"
    bindsym Return exec xdotool mouseup 2; mode "default"
}
# Enter mode:
bindsym $mod+m mode "middle_mouse"; exec xdotool mousedown --clearmodifiers 2

# Middle mouse button is very useful, so enable with $mod+m
mode "middle_mouse_g" {

    # Move very fast via jhkl
    bindsym j exec ~/.config/i3/blender.sh up    50
    bindsym h exec ~/.config/i3/blender.sh left  50
    bindsym k exec ~/.config/i3/blender.sh down  50
    bindsym l exec ~/.config/i3/blender.sh right 50

    # Move fast with wasd
    bindsym w exec ~/.config/i3/blender.sh up    10
    bindsym a exec ~/.config/i3/blender.sh left  10
    bindsym s exec ~/.config/i3/blender.sh down  10
    bindsym d exec ~/.config/i3/blender.sh right 10

    # Move slow with shift+jhkl
    bindsym shift+j exec ~/.config/i3/blender.sh up    5
    bindsym shift+h exec ~/.config/i3/blender.sh left  5
    bindsym shift+k exec ~/.config/i3/blender.sh down  5
    bindsym shift+l exec ~/.config/i3/blender.sh right 5

    # Move very slow with shift+wasd
    bindsym shift+w exec ~/.config/i3/blender.sh up    1
    bindsym shift+a exec ~/.config/i3/blender.sh left  1
    bindsym shift+s exec ~/.config/i3/blender.sh down  1
    bindsym shift+d exec ~/.config/i3/blender.sh right 1

    # Exiting mode
    bindsym $mod+g exec xdotool keyup Super_L mouseup 2 click 1 ; mode "default"
    bindsym Escape exec xdotool keyup Super_L mouseup 2 click 1 ; mode "default"
    bindsym Return exec xdotool keyup Super_L mouseup 2 click 1 ; mode "default"
}

